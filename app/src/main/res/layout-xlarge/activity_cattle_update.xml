<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_update"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        apps:layout_scrollFlags="scroll|enterAlways"
        android:titleTextColor="@color/textColorPrimary"
        apps:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_btn_bellow"
        android:layout_below="@+id/toolbar_update">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_ternak_image_h">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_ternak_image_h"
                android:background="@color/grey"
                android:src="@drawable/ic_add_sapi"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/add_picture"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_fap" 
                apps:fabSize="normal"
                android:layout_margin="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/margin_row">

                <TextView
                    android:id="@+id/idCattle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/cattle_id"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/detail_primary_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/idCattle_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textSize="@dimen/detail_primary_text" />

            </TableRow>

            <TableRow android:layout_marginBottom="@dimen/margin_row">

                <TextView
                    android:id="@+id/bwCattle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/cattle_bw"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/detail_primary_text"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/bwCattle_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="@string/cattle_bw"
                    android:textSize="@dimen/detail_primary_text" />

                <TextView
                    android:id="@+id/bwCattle_unit_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/cattle_bw_unit"
                    android:textSize="@dimen/detail_primary_text" />
            </TableRow>

            <TableRow android:layout_marginBottom="@dimen/margin_row">

                <TextView
                    android:id="@+id/bhCattle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/cattle_bh"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/detail_primary_text"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/bhCattle_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="@string/cattle_bh"
                    android:textSize="@dimen/detail_primary_text" />

                <TextView
                    android:id="@+id/bhCattle_unit_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/cattle_bh_unit"
                    android:textSize="@dimen/detail_primary_text" />

            </TableRow>

            <TableRow android:layout_marginBottom="@dimen/margin_row">

                <TextView
                    android:id="@+id/bcCattle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/cattle_bc"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/detail_primary_text"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/bcCattle_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="@string/cattle_bc"
                    android:textSize="@dimen/detail_primary_text" />

                <TextView
                    android:id="@+id/bcCattle_unit_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/cattle_bc_unit"
                    android:textSize="@dimen/detail_primary_text" />

            </TableRow>

            <TableRow android:layout_marginBottom="@dimen/margin_row">

                <TextView
                    android:id="@+id/ageCattle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/cattle_age"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/detail_primary_text"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ageCattle_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="@string/cattle_age"
                    android:textSize="@dimen/detail_primary_text" />

                <TextView
                    android:id="@+id/ageCattle_unit_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/cattle_age_unit"
                    android:textSize="@dimen/detail_primary_text" />

            </TableRow>

            <TableRow android:layout_marginBottom="@dimen/margin_row">

                <TextView
                    android:id="@+id/durCattle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/cattle_duration"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/detail_primary_text"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/durCattle_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="@string/cattle_duration"
                    android:textSize="@dimen/detail_primary_text" />

                <TextView
                    android:id="@+id/durCattle_unit_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/cattle_dur_unit"
                    android:textSize="@dimen/detail_primary_text" />
            </TableRow>

            <TableRow android:layout_marginBottom="@dimen/margin_row">

                <TextView
                    android:id="@+id/colorCattle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/cattle_color"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/detail_primary_text"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/colorCattle_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:hint="@string/cattle_color"
                    android:textSize="@dimen/detail_primary_text" />

            </TableRow>

            <TableRow android:layout_marginBottom="@dimen/margin_row">

                <TextView
                    android:id="@+id/healthCattle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/vet_note"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/detail_primary_text"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/healthCattle_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:hint="@string/vet_note"
                    android:textSize="@dimen/detail_primary_text" />

            </TableRow>

            <TableRow android:layout_marginBottom="@dimen/margin_row">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/vet_note"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/detail_primary_text"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:hint="@string/vet_note"
                    android:textSize="@dimen/detail_primary_text" />

            </TableRow>

        </TableLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_btn_bellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/updateDetail_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/UpdateBtn"/>

        <Button
            android:id="@+id/reportDetail_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reportBtn"/>
    </LinearLayout>

</RelativeLayout>